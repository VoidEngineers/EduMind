# ===========================================
# EduMind RabbitMQ Environment Variables
# ===========================================
# Copy this file to .env and update the values
# NEVER commit .env to version control!
# ===========================================

# Cluster Secret (MUST be the same on all nodes)
# Generate with: openssl rand -hex 32
RABBITMQ_ERLANG_COOKIE=your_super_secret_erlang_cookie_here

# Admin Credentials
RABBITMQ_ADMIN_USER=edumind_admin
RABBITMQ_ADMIN_PASS=change_this_to_a_strong_password

# Service Credentials
RABBITMQ_USER_SERVICE_PASS=user_service_password_here
RABBITMQ_XAI_SERVICE_PASS=xai_service_password_here
RABBITMQ_ENGAGEMENT_SERVICE_PASS=engagement_service_password_here
RABBITMQ_LEARNING_STYLE_SERVICE_PASS=learning_style_service_password_here
