{
  "name": "edumind-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all --parallel",
    "dev": "nx run-many --target=dev --all --parallel",
    "lint": "nx run-many --target=lint --all --parallel",
    "test": "nx run-many --target=test --all --parallel",
    "clean": "nx run-many --target=clean --all --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,py}\"",
    "type-check": "nx run-many --target=type-check --all --parallel",
    "nx": "nx",
    "migrate:nx": "npx nx migrate latest"
  },
  "devDependencies": {
    "nx": "22.3.3",
    "@nx/workspace": "22.3.3",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0"
}